  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>EM_BlowgunPain</defName>
    <label>painful blowgun</label>
    <description>The same toxin that produces stimulation when ingested burns intensely when it enters the bloodstream. Causes a lot of pain.</description>
    <graphicData>
      <texPath>Things/Item/Weapon/blowgunP</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Small</soundInteract>
    <costList>
      <WoodLog>30</WoodLog>
	<EM_AutovimBase>10</EM_AutovimBase>
	<PsychoidLeaves>30</PsychoidLeaves>
    </costList>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>0.8</Mass>
      <AccuracyTouch>0.89</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.41</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>1.66</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRanged</li>
      <li>NeolithicRangedBasic</li>
    </weaponTags>
    <recipeMaker>
	<researchPrerequisite>EM_BloD</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>EM_BlowdartPain</defaultProjectile>
        <warmupTime>1.00</warmupTime>
        <range>17</range>
        <soundCast>Bow_Small</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>


